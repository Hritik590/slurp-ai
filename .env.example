# Brave Search API Key
# Sign up for a free key at: https://brave.com/search/api/
BRAVE_API_KEY=your-api-key-here

# Rate limiting configuration (milliseconds)
BRAVE_RATE_LIMIT_DELAY=1000  # Free tier: 1 request per second

# Base paths
SLURP_BASE_PATH=                # Base path for all operations (default: process.cwd())
SLURP_INPUT_DIR=slurps_docs     # Input directory for markdown files
SLURP_OUTPUT_DIR=docs           # Output directory for scraped docs
SLURP_OUTPUT_FILE=compiled_docs.md  # Output file for compiled docs

# Scraping configuration
SLURP_MAX_PAGES_PER_SITE=20     # Maximum pages to scrape per site (0 for unlimited)
SLURP_CONCURRENCY=10            # Number of pages to process concurrently
SLURP_RETRY_COUNT=3             # Number of times to retry failed requests
SLURP_RETRY_DELAY=1000          # Delay between retries in milliseconds
SLURP_USE_HEADLESS=true         # Whether to use headless browser for JS content

# URL filtering
SLURP_ENFORCE_BASE_PATH=true    # Whether to enforce base path in URLs
SLURP_PRESERVE_QUERY_PARAMS=version,lang,theme  # Query parameters to preserve

# Compilation options
SLURP_PRESERVE_METADATA=true    # Whether to preserve metadata in compiled docs
SLURP_REMOVE_NAVIGATION=true    # Whether to remove navigation elements
SLURP_REMOVE_DUPLICATES=true    # Whether to remove duplicate content
SLURP_SIMILARITY_THRESHOLD=0.9  # Threshold for considering content as duplicate (0.0-1.0)
SLURP_SORT_BY=                  # How to sort files ('date', 'name', or empty for no sorting)
SLURP_INCLUDE_LIBRARIES=        # Comma-separated list of library names to include (empty for all)
SLURP_EXCLUDE_LIBRARIES=        # Comma-separated list of library names to exclude
SLURP_GENERATE_TOC=false        # Whether to generate a table of contents
